#!/bin/bash
printhelp() {
echo "
echo "
echo "
echo "
echo "
echo "
echo "
echo "
echo "
echo "
echo "
echo "
}
while (( $# )); do
	case "$1" in
		--help|-h) printhelp; return 0;;
		--mode|-m) mode=$2; shift;;
		--tmp|-t) cfg_tmp=$2; shift;;
		--pixelize|-p) cfg_pixelate_scale=$2; pixelate; shift;;
		--blur|-b) cfg_blur_scale=$2; blur; shift;;
		--icon|-i) cfg_lock_icon=$2; shift;;
		
		--) shift; break;;
		-*)
			err "Unknown key: $1"
			usage
			return 1
		;;
		
		*) break;;
	shift
	esac
done

ICON=$HOME/.xlock/icon.png
TMPBG=/tmp/screen.png
scrot $TMPBG
convert $TMPBG -scale 10% -scale 1000% $TMPBG
#convert $TMPBG $ICON -gravity center -composite -matte $TMPBG #use this for single monitor
convert $TMPBG $ICON -geometry +1670+830 -composite -matte $TMPBG
i3lock -u -i $TMPBG
